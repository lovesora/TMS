{
  "packages": [
    "packages/*"
  ],
  "version": "0.2.4",
  "npmClient": "yarn",
  "npmClientArgs": [
    "--no-lockfile"
  ],
  "command": {
    "version": {
      "allowBranch": [
        "master",
        "release/*"
      ],
      "conventionalCommits": true,
      "forcePublish": "*",
      "message": "chore(release): publish %s"
    }
  }
}
